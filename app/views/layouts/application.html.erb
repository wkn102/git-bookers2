<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container">
      <a class="navbar-brand" href="/">
        <span>Bookers</span>
      </a>
      <button class="navbar-toggler" >
         <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" >
        <ul class="navbar-nav ml-auto">
    <% if user_signed_in? %>
      <li class="nav-item">
        <i class="fas fa-home"></i>
        <%= link_to "Home", user_path(current_user.id), class: 'nav-link text-light' do %>
        <i class="fas fa-home"></i>
        <% end %>
      </li>
      <li class="nav-item">
        <%= link_to"Users", users_path, class: 'nav-link text-light' do %>
         <i class="fas fa-users"></i>
        <% end %>
      </li>
      <li class="nav-item">
        <%= link_to"Books", books_path, class: 'nav-link text-light' do %>
        <i class="fas fa-book-open"></i>
        <% end %>
      </li>
      <li class="nav-item">
        <%= link_to "logout", destroy_user_session_path, class: 'nav-link text-light', method: :delete do %>
        <i class="fas fa-sign-out-alt"></i>
        <% end %>
      </li>
    <% else %>
      <li class="nav-item">
        <%= link_to"Home", root_path, class: 'nav-link text-light' do %>
        <i class="fas fa-home"></i>
        <% end %>
      </li>
      <li class="nav-item">
        <%= link_to"About", home_about_path, class: 'nav-link text-light' do %>
        <i class="fas fa-link"></i>
        <% end %>
      </li>
      <li class="nav-item">
        <%= link_to "sign up", new_user_registration_path, class: 'nav-link text-light' do %>
        <i class="fas fa-user-plus"></i>
        <% end %>
      </li>
      <li class="nav-item">
        <%= link_to "login", new_user_session_path, class: 'nav-link text-light' do %>
        <i class="fas fa-sign-in-alt"></i>
        <% end %>
      </li>
    <% end %>
       </ul>
     </div>
    </div>
    </nav>
  </header>
  <main>
    <%= yield %>
  </main>
  <footer>
    <div class="container mt-5">
      <div class="row">
        <div class="mx-auto">
          <p>CopyRight Infratop.inc</p>
        </div>
      </div>
    </div>
  </footer>
  </body>
</html>
