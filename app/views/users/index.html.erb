<p id="notice"></p>
<div class="container px-5 px-sm-0">
<div class="row">
      <% if @book.errors.any? %>
      <%= @book.errors.count %>errors
      <% @book.errors.full_messages.each do |message| %>
      <%= message %>
      <% end %>
      <% end %>
  <div class="col-md-3">
  <%= render 'books/list', user:@user, book:@book %>
  </div>
    <div class="col-md-8 offset-md-1">
      <h2>Users</h2>
       <table class="table">
          <thead>
            <tr>
            <th>image</th>
            <th>name</th>
            <th></th>
            </tr>
          </thead>
          <tbody>
            <% @users.each do |user| %>
             <tr>
              <td>
                <%= attachment_image_tag user, :profile_image, size: "40x40", fallback: "no_image.jpg"  %>
              </td>
              <td> <%= user.name %> </td>
              <td> <%= link_to "Show", user_path(user.id), class:"user_17015" %></td>
              </tr>
            <% end %>
          </tbody>
       </table>
    </div>
</div>
</div>


