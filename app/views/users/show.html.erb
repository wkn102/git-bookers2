 <p>
 <%= flash[:notice] %>
 </P>
<div class="container px-5 px-sm-0">
<div class="row">
  <div class="col-md-3">
  <%= render 'books/list', user:@user, book:@book %>
  </div>
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
        <thead>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
              <th colspan="3"></th>
            </tr>
        </thead>
        <tbody>
             <% @books.each do |book| %>
             <!--bookを使って特定の情報を出してる-->
          <tr>
          <td>
             <%= attachment_image_tag @user, :profile_image, :fill, 40, 40, fallback: "no_image.jpg"  %>
          </td>
          <td>
            <%= link_to book_path(book.id) do %>
              <span><%= book.title %></span>
            <% end %>
          </td>
          <td>
            <%= book.body %>
          </td>
          </tr>
          <% end %>
         </tbody>
      </table>
    </div>
</div>
</div>

